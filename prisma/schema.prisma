generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  avatar_url    String?
  name          String
  phone         String   @unique
  email         String   @unique
  password_hash String
  role          String   @default("MEMBER")
  created_at    DateTime @default(now())

  posts    Post[]
  articles Article[]

  @@map("users")
}

model Category {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())

  posts Post[]

  @@map("categories")
}

model Post {
  id          String    @id @default(uuid())
  image_url   String?
  region      String
  title       String
  content     String
  created_at  DateTime  @default(now())
  approved_at DateTime?
  denied_at   DateTime?

  author  User   @relation(fields: [user_id], references: [id])
  user_id String

  categories Category[]

  @@map("posts")
}

model Article {
  id         String   @id @default(uuid())
  image_url  String?
  title      String
  content    String
  created_at DateTime @default(now())

  author  User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("articles")
}
